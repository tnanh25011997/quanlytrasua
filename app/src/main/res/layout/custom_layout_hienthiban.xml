<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtTenBan"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"

            />

        <ImageView
            android:id="@+id/ivBan"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/txtTenBan"
            android:layout_gravity="center"
            app:srcCompat="@drawable/table" />
        <ImageView
            android:id="@+id/ivThemNuoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/goimon2"
            android:layout_below="@id/ivBan"
            android:visibility="invisible"
            />
        <ImageView
            android:id="@+id/ivThanhToan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/thanhtoan"
            android:layout_below="@id/ivBan"
            android:layout_toRightOf="@id/ivThemNuoc"
            android:layout_marginLeft="15dp"
            android:visibility="invisible"
            />
        <ImageView
            android:id="@+id/ivAn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/anbutton"
            android:layout_below="@id/ivBan"
            android:layout_toRightOf="@id/ivThanhToan"
            android:layout_marginLeft="15dp"
            android:visibility="invisible"

            />
    </RelativeLayout>



</RelativeLayout>