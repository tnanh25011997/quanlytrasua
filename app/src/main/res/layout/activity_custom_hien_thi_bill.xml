<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:weightSum="3"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="70dp">
        <LinearLayout
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tvNameOdFoodBill"
                android:lines="1"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                style="?android:attr/textAppearanceMedium"
                android:text="Tên món ăn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvPriceOfFoodBill"
                android:lines="1"
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                style="?android:attr/textAppearanceSmall"
                android:text="Giá món ăn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginRight="10dp"
            android:gravity="center_vertical|right"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:padding="3dp"
                android:id="@+id/btnUpBill"
                android:src="@drawable/up_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:padding="3dp"
                android:id="@+id/tvCountBill"
                android:textColor="#000000"
                style="?android:attr/textAppearanceMedium"
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:padding="3dp"
                android:id="@+id/btnDownBill"
                android:src="@drawable/down_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>